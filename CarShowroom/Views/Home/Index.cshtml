
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ListHotProducts = (List<Model.EF.Product>)ViewBag.HotProducts;
    var ListAllRatings = (List<CarShowroom.Models.Rating>)ViewBag.Rates;
    var ListAllContents = (List<Model.EF.Content>)ViewBag.Contents;
    var ShowInfos = (List<Model.EF.Info>)ViewBag.Infos;
    var ShowSlideList = (List<Model.EF.Slide>)ViewBag.Slides;
}
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        @foreach (var slide in ShowSlideList)
        {
            <div class="banner-item-01" style="background-image: url('@slide.image.Substring(1)');">
                <div class="text-content">
                    <h2>@slide.description</h2>
                </div>
            </div>
        }

    </div>

</div>

<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Xe nổi bật</h2>
                    <a href="cars.html">Xem thêm <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            @foreach (var item in ListHotProducts)
            {

                <div class="col-lg-4 col-md-6">
                    <div class="product-item">
                        <a href="~/Product/Detail/@item.id"><img src="@Url.Content(item.image)" alt="@item.name"></a>
                        <div class="down-content">
                            <a href="~/Product/Detail/@item.id"><h4>@item.name</h4></a>


                            @if (item.promotionPrice != null)
                            {
                                <h6><small><del>@item.price.Value.ToString("N0")</del></small> @item.promotionPrice.Value.ToString("N0")</h6>

                            }
                            else
                            {
                                <h6>@(item.price.HasValue?item.price.Value.ToString("N0"):"Liên Hệ Trao Đổi")</h6>
                            }

                            <p>@item.description</p>
                            <!--<p>190 hp &nbsp;/&nbsp; Petrol &nbsp;/&nbsp; 2008 &nbsp;/&nbsp; Used vehicle</p>

                            <small>
                                <strong title="Author"><i class="fa fa-dashboard"></i> 130 000km</strong> &nbsp;&nbsp;&nbsp;&nbsp;
                                <strong title="Author"><i class="fa fa-cube"></i> 1800cc</strong>&nbsp;&nbsp;&nbsp;&nbsp;
                                <strong title="Views"><i class="fa fa-cog"></i> Manual</strong>
                            </small>-->
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

<div class="best-features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Về Chúng Tôi</h2>
                </div>
            </div>

            <div class="col-md-6">
                @foreach (var item in ShowInfos)
                {
                    <div class="left-content">
                        @if (item.link == false)
                        {
                            <p>@item.content</p>
                        }
                        else
                        {
                            <ul class="featured-list">
                                <li>

                                    <a href="@item.content">@item.name</a>
                                </li>
                            </ul>
                        }


                    </div>
                }

                <a href="~/Info/Index" class="filled-button">Đọc Thêm</a>
            </div>
            <div class="col-md-6">
                <div class="right-image">
                    <img src="~/assets/home/images/Aboutus.jpg" alt="" width="1000px">
                </div>
            </div>
        </div>
    </div>
</div>


<div class="services" style="background-image: url(assets/home/images/other-image-fullscren-1-1920x900.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Bài đăng tin tức mới nhất</h2>

                    <a href="blog.html">Đọc thêm <i class="fa fa-angle-right"></i></a>
                </div>
            </div>

            @foreach (var item in ListAllContents)
            {

                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <a href="#" class="services-item-image"><img src="@item.image" class="img-fluid" alt=""></a>

                        <div class="down-content">
                            <h4><a href="#">@item.name</a></h4>
                            <!--chỗ cần xuât ngày đăng, người đăng-->
                            <p style="margin: 0;"> John Doe &nbsp;&nbsp;|&nbsp;&nbsp; 12/06/2020 10:30 &nbsp;&nbsp;|&nbsp;&nbsp; 114</p>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>

<div class="happy-clients">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Khách hàng hài lòng</h2>
                    @{ var url = "/Rating/Rating";
                        <a href="@url">Đọc thêm <i class="fa fa-angle-right"></i></a>
                    }
                </div>
            </div>
            <div class="col-md-12">
                <div class="owl-clients owl-carousel text-center">

                    @foreach (var item in ListAllRatings)
                    {
                        <div class="service-item">
                            <div class="icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="down-content">
                                <h4>@item.name</h4>
                                <p class="n-m"><em>@item.comment</em></p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="inner-content">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>VUI LÒNG LIÊN HỆ VỚI CHÚNG TÔI QUA SỐ HOTLINE HOẶC QUA EMAIL.</h4>
                            <p>Chúng tôi sẽ giải đáp thắc mắc của bạn trong thời gian sớm nhất..</p>
                        </div>
                        <div class="col-lg-4 col-md-6 text-right">
                            <a href="contact.html" class="filled-button">Liên Hệ Với Chúng Tôi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

