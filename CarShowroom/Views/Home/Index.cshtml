
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ListHotProducts = (List<Model.EF.Product>)ViewBag.HotProducts;
    var ListAllRatings = (List<CarShowroom.Models.Rating>)ViewBag.Rates;
    var ListAllContents = (List<Model.EF.Content>)ViewBag.Contents;
    var ShowInfos = (List<Model.EF.Info>)ViewBag.Infos;
    var ShowSlideList = (List<Model.EF.Slide>)ViewBag.Slides;
}
<div class="banner header-text">
    <div class="owl-banner owl-carousel">
        @foreach (var slide in ShowSlideList)
        {
            <div class="banner-item-01" style="background-image: url('@slide.image.Substring(1)');">
                <div class="text-content">
                    <h2>@slide.description</h2>
                </div>
            </div>
        }

    </div>

</div>

@{ 
    var infourl = "/ve-chung-toi";
    var hoturl = "/san-pham-noi-bat";
    var contenturl = "/tin-tuc";
    var contacturl = "/lien-he";
    var rateurl = "/danh-gia";

}
<div class="latest-products">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Sản phẩm nổi bật</h2>
                    <a href="@hoturl">Xem thêm <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            @foreach (var item in ListHotProducts)
            {
                var url1 = "/chi-tiet/" + item.metaTitle + "-" + item.id;
                <div class="col-lg-4 col-md-6">
                    <div class="product-item">
                        <a href="@url1"><img src="@Url.Content(item.image)" alt="@item.name"></a>
                        <div class="down-content">
                            <a href="@url1"><h4>@item.name</h4></a>


                            @if (item.promotionPrice != null)
                            {
                                <h6><small><del>@item.price.Value.ToString("N0")</del></small> @item.promotionPrice.Value.ToString("N0")</h6>

                            }
                            else
                            {
                                <h6>@(item.price.HasValue?item.price.Value.ToString("N0"): "Liên hệ: 0917946616")</h6>
                            }

                            @*<p>@item.description</p>*@
                            <p>@item.taiTrong &nbsp;/&nbsp; @item.nhienLieu &nbsp;/&nbsp; @item.namSX &nbsp;</p>

                            <small>
                                <strong title="Loại thùng"><i class="fa fa-dashboard"></i> @item.loaiThung</strong> &nbsp;&nbsp;&nbsp;&nbsp;
                                <strong title="Hình thức"><i class="fa fa-cube"></i> @item.nhapKhau</strong>&nbsp;&nbsp;&nbsp;&nbsp;
                                <strong title="Loại hộp số"><i class="fa fa-cog"></i> @item.hopSo</strong>
                            </small>
                        </div>
                    </div>
                </div>
            }


        </div>
    </div>
</div>

<div class="best-features">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Về Chúng Tôi</h2>
                </div>
            </div>

            <div class="col-md-6">
                @foreach (var item in ShowInfos)
                {
                    <div class="left-content">
                        @if (item.link == false)
                        {
                            <p>@item.content</p>
                        }
                        else
                        {
                            <ul class="featured-list">
                                <li>

                                    <a href="@item.content">@item.name</a>
                                </li>
                            </ul>
                        }


                    </div>
                }

                <a href="@infourl" class="filled-button">Đọc Thêm</a>
            </div>
            <div class="col-md-6">
                <div class="right-image">
                    <img src="~/assets/img/xe-tai-thaco.jpg" alt="" @*width="1000px"*@>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="services" style="background-image: url(assets/home/images/other-image-fullscren-1-1920x900.jpg);">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h3>Tin tức mới nhất</h3>

                    <a href="@contenturl">Đọc thêm <i class="fa fa-angle-right"></i></a>
                </div>
            </div>

            @foreach (var item in ListAllContents)
            {

                <div class="col-lg-4 col-md-6">
                    <div class="service-item">
                        <a href="#" class="services-item-image"><img src="@Url.Content(item.image)" class="img-fluid" alt=""></a>

                        <div class="down-content">
                            <h4><a href="#">@item.name</a></h4>
                            <!--chỗ cần xuât ngày đăng, người đăng-->
                            <p style="margin: 0;"> John Doe &nbsp;&nbsp;|&nbsp;&nbsp; 12/06/2020 10:30 &nbsp;&nbsp;|&nbsp;&nbsp; 114</p>
                        </div>
                    </div>
                </div>

            }

        </div>
    </div>
</div>

<div class="happy-clients">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Đánh giá của khách hàng</h2>
                        <a href="@rateurl">Đọc thêm <i class="fa fa-angle-right"></i></a>
                </div>
            </div>
            <div class="col-md-12">
                <div class="owl-clients owl-carousel text-center">

                    @foreach (var item in ListAllRatings)
                    {
                        <div class="service-item">
                            <div class="icon">
                                <i class="fa fa-user"></i>
                            </div>
                            <div class="down-content">
                                <h4>@item.name</h4>
                                <p class="n-m"><em>@item.comment</em></p>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


<div class="call-to-action">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="inner-content">
                    <div class="row">
                        <div class="col-md-8">
                            <h4>VUI LÒNG LIÊN HỆ VỚI CHÚNG TÔI QUA SỐ HOTLINE HOẶC QUA EMAIL.</h4>
                            <p>Chúng tôi sẽ giải đáp thắc mắc của bạn trong thời gian sớm nhất..</p>
                        </div>
                        <div class="col-lg-4 col-md-6 text-right">
                            <a href="@contacturl" class="filled-button">Liên Hệ Với Chúng Tôi</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

