
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var ShowInfo = (List<Model.EF.Info>)ViewBag.NoLinkInfo;
    var image = (Model.EF.Slide)ViewBag.Image;
}
@section AboutUs{
    <div class="page-heading about-heading header-text" style="background-image: url('@image.image.Substring(1)');">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="text-content">
                        <h4></h4>
                        <h2>Về chúng tôi</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@foreach (var item in ShowInfo)
{
    <div class="best-features about-features">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                        <h2>@item.name</h2>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="right-image-custom">
                        <a href="#"><img src="@Url.Content(item.image)" /></a>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="left-content">
                        <h4>@item.name</h4>
                        <p>@item.content</p>
                        <ul class="social-icons">
                            <li><a href="https://www.facebook.com/Thaco-Tr%C6%B0%E1%BB%9Dng-H%E1%BA%A3i-C%C3%A0-Mau-2214376198825088"><i class="fa fa-facebook"></i></a></li>

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <div class="team-members">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="section-heading">
                        <h2></h2>
                    </div>
                    <p></p>
                </div>
            </div>
        </div>
    </div>

}


