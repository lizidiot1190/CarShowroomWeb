@model Model.EF.Info
@{
    ViewBag.Title = "Liên hệ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    #map {
        height: 600px;
    }
</style>
@section Footer{
    <script src="https://maps.googleapis.com/maps/api/js?AIzaSyAfFpoQqpSvkm6TmLakiREUPl6usLiYK0Q"></script>
    <script src="/vendor/Controller/contactController.js"></script>

    <script>
    function initMap() {
        const uluru = { lat: 10.8016071, lng: 106.714491 };
    const map = new google.maps.Map(document.getElementById("map"), {
    zoom: 15,
    center: uluru,
    });
    const contentString ='@Model.content';
    const infowindow = new google.maps.InfoWindow({
    content: contentString,
    });
    const marker = new google.maps.Marker({
    position: uluru,
    map,
    title: "Địa chỉ",
    });
    marker.addListener("click", () => {
    infowindow.open({
    anchor: marker,
    map,
    shouldFocus: false,
    });
    });
    }
    google.maps.event.addDomListener(window,'load',initMap);
    </script>
}
<div class="find-us">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Vị trí của chúng tôi trên bản đồ</h2>
                </div>
            </div>
            <div class="col-md-8">
                <div id="map">
                </div>
            </div>
            <div class="col-md-4">
                <div class="left-content">

                    <h4>Về Văn Phòng của chúng tôi</h4>
                    @Html.Raw(Model.content)
                    <ul class="social-icons">
                        <li><a href="https://www.facebook.com/vhh000000/"><i class="fa fa-facebook"></i></a></li>
                        <li><a href="https://twitter.com/vhh0106"><i class="fa fa-twitter"></i></a></li>

                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="send-message">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="section-heading">
                    <h2>Gửi Tin Nhắn Cho Chúng Tôi</h2>
                </div>
            </div>
            <div class="col-md-8">
                <div class="contact-form">
                    <form id="contact" action="" method="post">
                        <div class="row">
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>
                                    <input name="name" type="text" class="form-control" id="txtname" placeholder="Họ Và Tên" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>
                                    <input name="phoneNumber" type="text" class="form-control" id="txtphoneNumber" placeholder="Số điện thoại" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>
                                    <input name="email" type="text" class="form-control" id="txtemail" placeholder="Email" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-12 col-md-12 col-sm-12">
                                <fieldset>
                                    <input name="address" type="text" class="form-control" id="txtaddress" placeholder="Địa chỉ" required="">
                                </fieldset>
                            </div>
                            <div class="col-lg-12 ">
                                <fieldset>
                                    <input name="content" rows="6" class="form-control" id="txtcontent" placeholder="Tin nhắn" required="">
                                </fieldset>
                            </div>

                            <div class="col-md-8">
                                <button type="submit" id="form-submit" class="filled-button">Gửi Tin Nhắn</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
            <div class="col-md-4">
                <img src="~/assets/images/vhh1.jpg" class="img-fluid" alt="">

                <h5 class="text-center" style="margin-top: 15px;"> @Html.Raw(Model.name)</h5>

            </div>
        </div>
    </div>
</div>



