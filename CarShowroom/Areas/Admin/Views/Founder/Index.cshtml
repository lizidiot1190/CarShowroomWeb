@model PagedList.IPagedList<CarShowroom.Models.Founder>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.min.js")" type="text/javascript"></script>
@{
    ViewBag.Title = "Quản lý nhà sáng";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Nhà sáng lập
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <form action="~/Admin/Founder/Create">
            <input type="submit" class="btn btn-primary btn-user" value="Thêm mới" />
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Thay đổi</th>
                        <th>Tên</th>
                        <th>Hình ảnh</th>
                        <th>Chức vụ</th>
                        <th>Link FB</th>
                        <th>Link Instagam</th>
                        <th>Slogan</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr id="row_@item.id">
                        <td>
                            <a href="~/Admin/Founder/Edit/@item.id">Sửa</a>
                            @Ajax.ActionLink("Xóa", "Delete", new { @id = item.id }, new AjaxOptions
                       {
                           Confirm = "ban có chắc chắn xóa không?",
                           OnComplete = "$('row_" + @item.id + "').remove()",
                           OnSuccess = "window.location.reload()",
                           HttpMethod = "Delete"
                       })
                        </td>
                        <td>@item.name</td>
                        <td><img src="@Url.Content(item.image)" height="100" /></td>
                        <td>@item.position</td>
                        <td>@item.link1</td>
                        <td>@item.link2</td>
                        <td>@item.slogan</td>
                    </tr>

                    }

                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>

</div>

