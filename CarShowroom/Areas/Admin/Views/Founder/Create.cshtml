            @Html.ValidationMessageFor(model => model.link2, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.slogan, htmlAttributes: new { @class = "control-label col-md-2" })
