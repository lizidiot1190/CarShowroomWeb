@model CarShowroom.Models.Founder

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml";
}

@section header{
    Thêm mới Nhà sáng lập
    }

@using (Html.BeginForm("Create","Founder",FormMethod.Post,new {enctype="multipart/form-data" }))
