@model PagedList.IPagedList<Model.EF.Content>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
@{ ViewBag.Title = "Quản lý content"; Layout = "~/Areas/Admin/Views/Shared/_Layouts.cshtml"; }
@section header{
    Danh sách Content
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <form action="~/Admin/Content/Create">
            <input type="submit" class="btn btn-primary btn-user" value="Thêm mới" />
        </form>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Thay đổi</th>
                        <th>Name</th>
                        <th>MetaTitle</th>
                        <th>Description</th>
                        <th>Image</th>
                        <th>Content Category ID</th>
                        <th>Status</th>
                        <th>Top hot</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr id="row_@item.id">
                            <td>
                                <a href="~/Admin/Content/Edit/@item.id">Sửa</a>
                                @Ajax.ActionLink("Xóa", "Delete", new { @id = item.id }, new AjaxOptions
                           {
                                Confirm = "Bạn có chắc chắn xóa không?",
                                OnComplete = "$('row_" + @item.id + "').remove()",
                                OnSuccess="window.location.reload()",
                                HttpMethod = "Delete"
                           })
                            </td>
                            <td>@item.name</td>
                            <td>@item.metaTitle</td>
                            <td>@item.description</td>
                            <td><img src="@Url.Content(item.image)" width="100" height="100" /></td>
                            <td>@item.categoryID</td>
                            <td>@item.status</td>
                            <td>@item.topHot</td>

                        </tr>

                    }

                </tbody>
            </table>
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>

</div>


